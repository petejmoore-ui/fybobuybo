<script>
// Fade-in animation for cards
window.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.card');
    cards.forEach((card, index) => {
        setTimeout(() => card.classList.add('visible'), index * 100);
    });
});
